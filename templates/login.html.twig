{% extends 'layout.html.twig' %}

{% block title %}{{ 'button.login'|trans}}{% endblock %}

{% block content %}
    <h1>{{ 'button.login'|trans}}</h1>
    {{ form_start(form, { method: 'post', action: url('login') }) }}
    {{ form_widget(form) }}
    <input type="submit" value="{{ 'button.login'|trans}}" class="button" />
    {{ form_end(form) }}
{% endblock %}
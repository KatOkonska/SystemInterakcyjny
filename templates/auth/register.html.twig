{% extends 'layout.html.twig' %}

{% block title %}{{ 'title.auth_register'|trans }}{% endblock %}

{% block content %}
    <h1>{{ 'title.auth_register'|trans }}</h1>

    {% if error is defined and error|length %}
        {{ dump(error) }}
    {% endif %}

    <div>
        {{ form_start(form, { method: 'post', action: path('auth_register') }) }}
        {{ form_widget(form) }}
        <input type="submit" value="{{ 'action.login'|trans }}" class="btn btn-success" />
        {{ form_end(form) }}
    </div>
{% endblock %}